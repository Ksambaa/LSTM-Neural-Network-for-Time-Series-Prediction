{
    "data": {
        "filename": "water_debit.csv",
        "columns": ["Debit"],
        "sequence_length": 50,
        "train_test_split": 0.8,
        "normalise": true
    },
    "training": {
        "epochs": 50,
        "batch_size": 32
    },
    "model": {
        "loss": "mse",
        "optimizer": "adam",
        "save_dir": "saved_models",
        "layers": [
            {
                "type": "lstm",
                "neurons": 50,
                "input_timesteps": 49,
                "input_dim": 1, 
                "return_seq": true
            },
            {
                "type": "dropout",
                "rate": 0.2
            },
            {
                "type": "lstm",
                "neurons": 50,
                "return_seq": false
            },
            {
                "type": "dropout",
                "rate": 0.2
            },
            {
                "type": "dense",
                "neurons": 1,
                "activation": "linear"
            }
        ]
    }
}